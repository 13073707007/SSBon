<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/appcolor" >

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:text="小帮"
        android:textColor="@color/white"
        android:textSize="@dimen/navigation_bar_font_size" />

    <ImageButton
        android:id="@+id/img_btn_turn_personalInfo"
        android:layout_width="@dimen/navigation_bar_iconsize"
        android:layout_height="@dimen/navigation_bar_iconsize"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="15dp"
        android:background="@drawable/shezhi" />

    <ImageView
        android:id="@+id/img_btn_control_voice"
        android:layout_width="@dimen/navigation_bar_iconsize"
        android:layout_height="@dimen/navigation_bar_iconsize"
        android:layout_centerVertical="true"
        android:layout_marginRight="10dp"
        android:layout_toLeftOf="@id/img_btn_turn_personalInfo"
        android:src="@drawable/laba" />

</RelativeLayout>