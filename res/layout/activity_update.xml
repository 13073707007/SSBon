<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_gray"
    android:orientation="vertical" >

    <include
        android:layout_width="match_parent"
        android:layout_height="@dimen/navigation_bar_height"
        layout="@layout/head_activity_updata" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/navigation_set_height"
        android:layout_marginTop="150dp"
        android:background="@color/white"
        android:gravity="center"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/tv_versions"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="当前已是最新版本"
            android:textColor="@color/black"
            android:textSize="@dimen/navigation_bar_menu_font_size" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/navigation_set_height"
        android:layout_marginTop="1dp"
        android:background="@color/white"
        android:gravity="center"
        android:orientation="vertical" >

        <Button
            android:id="@+id/btn_versions_send"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:background="@drawable/selector_btn_applybon"
            android:text="知道了"
             android:textSize="@dimen/navigation_bar_menu_font_size"  />
    </LinearLayout>

</LinearLayout>